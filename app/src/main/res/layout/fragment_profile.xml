<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="Name"
            android:ems="6"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_name_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_name_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_father_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/father_name"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/father_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_father_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_father_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_father_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_gender_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/gender"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_father_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/gender_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_gender_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_gender_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_gender_tv" />
        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_cn_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/c_number"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_gender_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/cnumber_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_cn_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_cn_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_cn_tv" />
        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_email_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/email"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_cn_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/email_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_email_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_email_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_email_tv" />
        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_password_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/password"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_email_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/password_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_password_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_password_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_password_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_hdegree_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/degree"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_password_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/hdegree_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_hdegree_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_hdegree_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_hdegree_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_grades_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/grades"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_hdegree_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/grades_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_grades_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_grades_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_grades_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_year_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/year"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_grades_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/year_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_year_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_year_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_year_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/profile_institute_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:text="@string/institute"
            android:textStyle="bold"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_value"
            app:layout_constraintTop_toBottomOf="@+id/profile_year_tv" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/institute_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ems="5"
            android:gravity="left|center"
            android:minHeight="40dp"
            android:textColor="@color/fragment_text_clr"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_institute_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_institute_tv"
            app:layout_constraintTop_toTopOf="@+id/profile_institute_tv" />


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>